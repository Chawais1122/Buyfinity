datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URI")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  BUYER
  ADMIN
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  firstName String
  lastName  String
  address   Address?
  role      Role     @default(BUYER)
  data      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Address {
  street String
  city   String
  state  String
  zip    String
}
